<%- include header %>
<form method="post">
标题:<br>
<input type="text" name="title" value="<%= post.title %>" disabled="disabled"/><br>
<% var tags = ""; %>
<% post.tags.forEach(function(tag, index) { %>
<% tags += tag.tag + ' '; %>
<% }) %>
标签：<br/>
<input type="text" name="tags" value="<%= tags %>" disabled/>
正文：<br>
<textarea name="content" rows="20" clos="100"><%= post.content %></textarea>
<input type="submit"/>
</form>
<%- include footer %>