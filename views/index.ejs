<div id="myCarousel" class="carousel slide">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item"><img src="/images/background1.jpg"/></div>
    <div class="item"><img src="/images/background2.jpg"/></div>
    <div class="item"><img src="/images/background3.jpg"/></div>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>
<%- include header %>
<% posts.forEach(function(post, index){ %>
<p><h2><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2>
<a href="/u/<%= post.name %>"><img src="<%= post.head %>" class="r_head"/></a>
</p>
<p class="info">
作者：<a href="#"><%= post.name %></a>
日期：<%= post.time.minute %><br/>
<% if (post.tags.length) { %>
标签：<% post.tags.forEach(function(tag, index){ %>
<a class="tag" href="/tags/<%= tag.tag %>"><%= tag.tag %></a>
<% }) %>
<% } %>
</p>
<%- post.content %>
<p class="info">阅读：<%= post.pv %> | 评论：<%= post.comments.length %></p>
<% }) %>
<%- include paging %>
<%- include footer %>